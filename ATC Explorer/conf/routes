# Set context name for Tomcat deployment
%{ ctx = play.configuration.getProperty('war.context', '') }% 

# Routes 
# This file defines all application routes (Higher priority routes first) 
# ~~~~ 

# Home page
GET     ${ctx}                                      Application.index

# Ignore favicon requests
GET     ${ctx}/favicon.ico                            404

# Map static resources from the /app/public folder to the /public path
GET     ${ctx}/public/                                staticDir:public

# Map static resources from the /app/public folder to the /public path
GET     ${ctx}/query                                          Application.query 
GET     ${ctx}/subclasses/{query}                   Application.subclasses
GET     ${ctx}/superclasses/{query}                   Application.superclasses
GET     ${ctx}/download                                Application.download
GET     ${ctx}/{id}                                Application.term

# Catch all
*       ${ctx}/{controller}/{action}                  {controller}.{action}
